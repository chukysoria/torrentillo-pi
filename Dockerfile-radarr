# https://hub.docker.com/r/linuxserver/radarr
FROM --platform=linux/arm64/v8 linuxserver/radarr:latest

RUN \
 echo "**** install packages ****" && \
 apt-get update && \
 apt-get install -y \
        nfs-common && \
 echo "**** cleanup ****" && \
 apt-get clean && \
 rm -rf \
	/tmp/* \
	/var/tmp/*

#Â add local files
COPY root/ /
